#!/bin/bash

#SBATCH --job-name GNER-eval
#SBATCH --output ./train_merge_eval/GNER_test_output_%j.txt
#SBATCH --error ./train_merge_eval/GNER_test_errors_%j.txt
#SBATCH --mail-user andrew.zamai@studenti.unipd.it
#SBATCH --mail-type ALL
#SBATCH --time 12:00:00
#SBATCH -n 1
#SBATCH -p allgroups
#SBATCH --mem 256G
#SBATCH --gres=gpu:rtx:1
#SBATCH --exclude=gpu1

export PYTHONPATH=/nfsd/VFdisk/zamaiandre/ZeroShotNER/src/GNER/src:$PYTHONPATH

MODEL_NAME_OR_PATH=/nfsd/VFdisk/zamaiandre/ZeroShotNER/merged_models/GNER-pileNER-391x100-onlyPOS-2
DATA_DIR=/nfsd/VFdisk/zamaiandre/ZeroShotNER/src/GNER/data
DATA_CONFIG_DIR=/nfsd/VFdisk/zamaiandre/ZeroShotNER/src/GNER/configs/dataset_configs/task_adaptation_configs
INSTRUCTION_FILE=/nfsd/VFdisk/zamaiandre/ZeroShotNER/src/GNER/configs/instruction_configs/instruction.json
OUTPUT_DIR=predictions/GNER-SLIMER-391x5
BEAM_SIZE=1

RUN_NAME=eval-GNER

srun singularity exec --nv --bind /nfsd/VFdisk/zamaiandre/ZeroShotNER vllm_pip_container.sif python3 ./src/GNER/src/run_predictions_vllm.py \
    --bf16 True --tf32 True \
    --generation_num_beams ${BEAM_SIZE} \
    --do_predict \
    --predict_with_generate \
    --model_name_or_path $MODEL_NAME_OR_PATH \
    --data_dir $DATA_DIR \
    --preprocessing_num_workers 4 \
    --data_config_dir $DATA_CONFIG_DIR \
    --instruction_file $INSTRUCTION_FILE \
    --output_dir $OUTPUT_DIR \
    --per_device_eval_batch_size 4 \
    --run_name $RUN_NAME \
    --max_source_length 640 \
    --max_target_length 640 \
    --generation_max_length 1280 \
    --overwrite_output_dir \
    --overwrite_cache \
    --seed 1234 \
    --cache_dir /nfsd/VFdisk/zamaiandre/ZeroShotNER/hf_cache_dir

